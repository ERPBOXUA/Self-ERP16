<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="view_partner_property_form" model="ir.ui.view">
        <field name="name">res.partner.property.form.inherit.selferp_accountable_person</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="account.view_partner_property_form"/>
        <field name="arch" type="xml">
            <field name="property_account_payable_id" position="after">
                <field name="employees_count" invisible="1"/>
                <field name="property_account_accountable_id"
                       attrs="{'invisible': ['|', ('is_company', '=', True), ('employees_count', '=', 0)]}"/>
            </field>
        </field>
    </record>

</odoo>
