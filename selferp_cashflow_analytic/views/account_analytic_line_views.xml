<?xml version="1.0" encoding="UTF-8"?>
<odoo>


    <record id="view_account_analytic_line_filter" model="ir.ui.view">
        <field name="name">account.analytic.line.select.inherit.selferp_cashflow_analytic</field>
        <field name="model">account.analytic.line</field>
        <field name="inherit_id" ref="analytic.view_account_analytic_line_filter"/>
        <field name="arch" type="xml">
            <filter name="date" position="after">
                <filter string="Cash Flow" name="filter_by_cash_flow" domain="[('plan_id.cash_flow_article', '=', True)]"/>
            </filter>

            <filter name="group_by_analytic_plan" position="after">
                <filter string="Account Code" name="group_by_code" context="{'group_by':'account_code'}"/>
            </filter>
        </field>
    </record>


</odoo>
