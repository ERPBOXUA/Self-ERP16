<?xml version="1.0" encoding="UTF-8"?>
<odoo>


    <record id="purchase_order_form" model="ir.ui.view">
        <field name="name">purchase.order.form.inherit.selferp_l10n_ua_currency</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.purchase_order_form"/>
        <field name="priority" eval="100" />
        <field name="arch" type="xml">
            <xpath expr="//div[@name='button_box']/button[@name='action_view_picking']" position="before">
                <button name="action_show_landed_costs"
                        type="object"
                        groups="stock.group_stock_manager"
                        attrs="{'invisible': [('landed_cost_count', '=', 0)]}"
                        class="oe_stat_button"
                        icon="fa-plus-square">
                    <field name="landed_cost_count" widget="statinfo" string="Landed Costs"/>
                </button>
            </xpath>

            <field name="currency_id" position="after">
                <field name="is_company_currency" invisible="1"/>
                <field name="is_import"
                       attrs="{'invisible': [('is_company_currency', '=', True)]}"
                       force_save="True"/>
            </field>

            <xpath expr="//field[@name='order_line']/tree/field[@name='taxes_id']" position="attributes">
                <attribute name="attrs">{'column_invisible': [('parent.is_import', '=', True)]}</attribute>
            </xpath>
            <xpath expr="//field[@name='order_line']/form//field[@name='state']" position="after">
                <field name="order_is_import" invisible="1"/>
            </xpath>
            <xpath expr="//field[@name='order_line']/form//field[@name='taxes_id']" position="attributes">
                <attribute name="attrs">{'invisible': [('order_is_import', '=', True)]}</attribute>
            </xpath>
        </field>
    </record>


</odoo>
