<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.selferp_l10n_ua_currency</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="account.res_config_settings_view_form"/>
        <field name="priority" eval="100"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@id='default_accounts']/div[hasclass('o_setting_box')][1]" position="inside">
                <div class="o_horizontal_separator mt-4 mb-3 text-uppercase fw-bolder small"></div>
                <div class="o_setting_right_pane">
                    <div class="content-group">
                        <div>
                            <span class="o_form_label">Post Exchange difference entries for currency Purchase/Sale:</span>
                        </div>
                        <div class="row mt8">
                            <label for="income_exchange_difference_account_id" class="col-lg-4 o_light_label"/>
                            <field name="income_exchange_difference_account_id"/>
                        </div>
                        <div class="row mt8">
                            <label for="expense_exchange_difference_account_id" class="col-lg-4 o_light_label"/>
                            <field name="expense_exchange_difference_account_id"/>
                        </div>
                        <div class="row mt8">
                            <label for="bank_commission_account_id" class="col-lg-4 o_light_label"/>
                            <field name="bank_commission_account_id"/>
                        </div>
                        <div class="row mt8">
                            <label for="transit_in_national_currency_account_id" class="col-lg-4 o_light_label"/>
                            <field name="transit_in_national_currency_account_id"/>
                        </div>
                        <div class="row mt8">
                            <label for="transit_in_foreign_currency_account_id" class="col-lg-4 o_light_label"/>
                            <field name="transit_in_foreign_currency_account_id"/>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>

</odoo>
