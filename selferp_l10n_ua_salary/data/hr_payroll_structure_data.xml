        <field name="type_id" ref="hr_contract.structure_type_employee"/>
        <field name="unpaid_work_entry_type_ids" eval="[(4, ref('hr_work_entry_contract.work_entry_type_unpaid_leave'))]"/>
        <field name="country_id" eval="False"/>
    </record>

    <record id="hr_payroll_structure_ua_salary_civil_law_contract" model="hr.payroll.structure">
        <field name="name">UA Salary Civil Law Contract</field>
        <field name="type_id" ref="hr_payroll_structure_type_civil_law_contract"/>
        <field name="unpaid_work_entry_type_ids" eval="[(4, ref('hr_work_entry_contract.work_entry_type_unpaid_leave'))]"/>
        <field name="country_id" eval="False"/>
    </record>

    <record id="selferp_l10n_ua_salary.hr_payroll_structure_type_civil_law_contract" model="hr.payroll.structure.type">
        <field name="default_struct_id" ref="selferp_l10n_ua_salary.hr_payroll_structure_ua_salary_civil_law_contract"/>
    </record>

    <record id="hr_payroll_structure_ua_hourly_wages" model="hr.payroll.structure">
        <field name="name">UA Hourly Wages</field>
        <field name="type_id" ref="hr_payroll_structure_type_hourly_wages"/>
        <field name="unpaid_work_entry_type_ids" eval="[(4, ref('hr_work_entry_contract.work_entry_type_unpaid_leave'))]"/>
        <field name="country_id" eval="False"/>
    </record>

    <record id="selferp_l10n_ua_salary.hr_payroll_structure_type_hourly_wages" model="hr.payroll.structure.type">
        <field name="default_struct_id" ref="selferp_l10n_ua_salary.hr_payroll_structure_ua_hourly_wages"/>
    </record>

</odoo>
