<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

    <!-- WORK100 -->
    <record id="hr_work_entry.work_entry_type_attendance" model="hr.work.entry.type">
        <field name="timesheet_ccode">Р</field>
        <field name="timesheet_ncode">1</field>
    </record>

    <!-- WORK_UA03 -->
    <record id="hr_work_entry_type_work_in_the_evening" model="hr.work.entry.type">
        <field name="name">Work In The Evening</field>
        <field name="code">WORK_UA03</field>
        <field name="color">6</field>
        <field name="timesheet_ccode">ВЧ</field>
        <field name="timesheet_ncode">3</field>
        <field name="overtime" eval="True"/>
        <field name="surcharge_percents">0.0</field>
    </record>

     <!-- WORK_UA04 -->
    <record id="hr_work_entry_type_work_at_night" model="hr.work.entry.type">
        <field name="name">Work At Night</field>
        <field name="code">WORK_UA04</field>
        <field name="color">6</field>
        <field name="timesheet_ccode">РН</field>
        <field name="timesheet_ncode">4</field>
        <field name="overtime" eval="True"/>
        <field name="surcharge_percents">0.20</field>
    </record>

    <!-- WORK_UA06 -->
    <record id="hr_work_entry_type_work_on_day_off" model="hr.work.entry.type">
        <field name="name">Work On Day Off</field>
        <field name="code">WORK_UA06</field>
        <field name="color">6</field>
        <field name="timesheet_ccode">РВ</field>
        <field name="timesheet_ncode">6</field>
    </record>

    <!-- LEAVE_UA07 -->
    <record id="hr_work_entry_type_business_trip" model="hr.work.entry.type">
        <field name="name">Business Trip</field>
        <field name="code">LEAVE_UA07</field>
        <field name="color">8</field>
        <field name="timesheet_ccode">ВД</field>
        <field name="timesheet_ncode">7</field>
        <field name="is_leave" eval="True"/>
    </record>

    <!-- LEAVE90 -->
    <record id="hr_work_entry_contract.work_entry_type_unpaid_leave" model="hr.work.entry.type">
        <field name="timesheet_ccode">НА</field>
        <field name="timesheet_ncode">12</field>
    </record>

    <!-- LEAVE110 -->
    <record id="hr_work_entry_contract.work_entry_type_sick_leave" model="hr.work.entry.type">
        <field name="timesheet_ccode">ТН</field>
        <field name="timesheet_ncode">26</field>
    </record>

    <!-- LEAVE_UA09 -->
    <record id="hr_work_entry_type_annual_additional_leave" model="hr.work.entry.type">
        <field name="name">Annual Additional Leave (acc. to art. 7, 8 of Ukraine Law of Leaves)</field>
        <field name="code">LEAVE_UA09</field>
        <field name="is_leave">True</field>
        <field name="timesheet_ccode">Д</field>
        <field name="timesheet_ncode">9</field>
    </record>

    <!-- LEAVE_UA11 -->
    <record id="hr_work_entry_type_creative_leave" model="hr.work.entry.type">
        <field name="name">Creative Leave (acc. to art. 16 of Ukraine Law of Leaves)</field>
        <field name="code">LEAVE_UA11</field>
        <field name="color">11</field>
        <field name="is_leave">True</field>
        <field name="timesheet_ccode">ТВ</field>
        <field name="timesheet_ncode">11</field>
    </record>

    <!-- LEAVE_UA16 -->
    <record id="hr_work_entry_type_maternity_leave" model="hr.work.entry.type">
        <field name="name">Maternity Leave</field>
        <field name="code">LEAVE_UA16</field>
        <field name="color">3</field>
        <field name="is_leave">True</field>
        <field name="timesheet_ccode">ВП</field>
        <field name="timesheet_ncode">16</field>
    </record>

    <!-- LEAVE_UA22 -->
    <record id="hr_work_entry_type_leave_legal" model="hr.work.entry.type">
        <field name="name">Other unworked time provided for by law (state and public duties, pre-conscription training, military training, donor, time off, etc.)</field>
        <field name="code">LEAVE_UA22</field>
        <field name="timesheet_ccode">ІН</field>
        <field name="timesheet_ncode">22</field>
    </record>

    <record id="hr_work_entry_type_absense_from_work" model="hr.work.entry.type">
        <field name="name">Absence From Work</field>
        <field name="code">LEAVE_UA24</field>
        <field name="color">9</field>
        <field name="timesheet_ccode">ПР</field>
        <field name="timesheet_ncode">24</field>
        <field name="is_leave" eval="True"/>
    </record>

    <!-- LEAVE120 -->
    <record id="hr_work_entry_contract.work_entry_type_legal_leave" model="hr.work.entry.type">
        <field name="timesheet_ccode">В</field>
        <field name="timesheet_ncode">8</field>
    </record>

</odoo>
