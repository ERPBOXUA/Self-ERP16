<?xml version="1.0" encoding="UTF-8"?>
<odoo>


    <record id="hr_employee_card_paperformat_portrait" model="report.paperformat">
        <field name="name">Employee Card Portrait PaperFormat</field>
        <field name="default" eval="True"/>
        <field name="format">A4</field>
        <field name="page_height">0</field>
        <field name="page_width">0</field>
        <field name="orientation">Portrait</field>
        <field name="margin_top">5</field>
        <field name="margin_bottom">5</field>
        <field name="margin_left">2</field>
        <field name="margin_right">2</field>
        <field name="header_line" eval="False"/>
        <field name="header_spacing">0</field>
        <field name="dpi">90</field>
    </record>




    <record id="hr_employee_card" model="ir.actions.report">
        <field name="name">Особова картка працівника</field>
        <field name="model">hr.employee</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">selferp_l10n_ua_salary.hr_employee_card_template</field>
        <field name="report_file">selferp_l10n_ua_salary.hr_employee_card_template</field>
        <field name="print_report_name">'Особова картка працівника - %s' % (object.name)</field>
        <field name="binding_model_id" ref="selferp_l10n_ua_salary.model_hr_employee"/>
        <field name="binding_type">report</field>
        <field name="paperformat_id" ref="hr_employee_card_paperformat_portrait"/>
    </record>


</odoo>
