    <template id="hr_order_recruitment_report_template">
        <div t-translation="off" class="page order_report">
            <div class="row mb-3" style="margin-bottom: 20px;">
                <div class="col-7 pe-3 justify-content-center align-center mt-4">
                    <div class="underlined_block_value_container mb-0 me-5">
                        <div class="ub_value pt-2 pb-1  text-center" t-esc="res_company.name"/>
                    </div>
                    <div style="margin-bottom: 10px; width: 100%; text-align: center;">Найменування підприємства (установи, організації)</div>
