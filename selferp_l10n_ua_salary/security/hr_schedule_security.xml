<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="hr_schedule_rule_multicompany" model="ir.rule">
        <field name="name">Staff Schedule: multi company global rule</field>
        <field name="model_id" ref="model_hr_schedule"/>
        <field name="domain_force">[('company_id', 'in', company_ids)]</field>
    </record>

    <record id="hr_schedule_line_rule_multicompany" model="ir.rule">
        <field name="name">Staff Schedule Line: multi company global rule</field>
        <field name="model_id" ref="model_hr_schedule_line"/>
        <field name="domain_force">[('schedule_id.company_id', 'in', company_ids)]</field>
    </record>

</odoo>
