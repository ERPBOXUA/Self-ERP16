<?xml version="1.0" encoding="utf-8"?>
<odoo>


    <record id="view_bank_rec_widget_form" model="ir.ui.view">
        <field name="name">bank.rec.widget.form.inherit.selferp_l10n_ua_salary</field>
        <field name="model">bank.rec.widget</field>
        <field name="inherit_id" ref="account_accountant.view_bank_rec_widget_form"/>
        <field name="priority" eval="100"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='manual_operations_tab']//field[@name='form_name']/.." position="inside">
                <field name="is_salary_payment"/>
                <field name="payslip_id"
                       force_save="1"
                       options="{'no_create': True, 'no_edit': True}"
                       attrs="{'invisible': [('is_salary_payment', '!=', True)], 'required': [('is_salary_payment', '=', True)]}"/>
            </xpath>
        </field>
    </record>


</odoo>
