<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="hr_leave_view_form" model="ir.ui.view">
        <field name="name">hr.leave.view.form.inherit.selferp_l10n_ua_salary</field>
        <field name="model">hr.leave</field>
        <field name="inherit_id" ref="hr_holidays.hr_leave_view_form"/>
        <field name="priority">90</field>
        <field name="arch" type="xml">
            <xpath expr="//div[@name='duration_display']/div[hasclass('o_row')][1]/span" position="replace">
                <span attrs="{'invisible': [('in_calendar_days', '=', True)]}">Working Day(s)</span>
            </xpath>
            <xpath expr="//div[@name='duration_display']/div[hasclass('o_row')][1]/field[@name='number_of_days_display']" position="after">
                <field name="in_calendar_days" invisible="1"/>
                <span attrs="{'invisible': [('in_calendar_days', '=', False)]}">Calendar Day(s)</span>
            </xpath>
        </field>
    </record>

</odoo>
