<?xml version="1.0" encoding="UTF-8"?>
<odoo>


    <record id="hr_order_type_view_tree" model="ir.ui.view">
        <field name="name">hr.order.type.view.tree</field>
        <field name="model">hr.order.type</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="type_group_id"/>
            </tree>
        </field>
    </record>


    <record id="hr_order_type_view_form" model="ir.ui.view">
        <field name="name">hr.order.type.view.form</field>
        <field name="model">hr.order.type</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="type_group_id"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>


    <record id="hr_order_type_action" model="ir.actions.act_window">
        <field name="name">Order Types</field>
        <field name="res_model">hr.order.type</field>
        <field name="view_mode">tree,form</field>
    </record>


    <menuitem id="hr_order_type_menu"
              name="Order types"
              action="hr_order_type_action"
              parent="hr.menu_config_employee"
              sequence="8"/>


</odoo>
