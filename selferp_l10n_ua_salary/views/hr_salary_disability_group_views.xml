<?xml version="1.0" encoding="UTF-8"?>
<odoo>


    <record id="hr_salary_disability_group_view_tree" model="ir.ui.view" >
        <field name="name">hr.salary.disability_group.view.tree</field>
        <field name="model">hr.salary.disability_group</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="code"/>
            </tree>
        </field>
    </record>


    <record id="hr_salary_disability_group_view_form" model="ir.ui.view">
        <field name="name">hr.salary.disability_group.view.form</field>
        <field name="model">hr.salary.disability_group</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                        </group>
                        <group>
                            <field name="code"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>


    <record id="hr_salary_disability_group_action" model="ir.actions.act_window">
        <field name="name">Disability Groups</field>
        <field name="res_model">hr.salary.disability_group</field>
        <field name="view_mode">tree,form</field>
    </record>


</odoo>
