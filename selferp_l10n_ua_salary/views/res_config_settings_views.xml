<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.hr.selferp_l10n_ua_salary</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="hr_payroll.res_config_settings_view_form"/>
        <field name="priority" eval="100"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@id='hr_payroll_accountant']" position="after">
                <h2>Payslips</h2>
                <div class="row mt16 o_settings_container" id="hr_payroll_payslips">
                    <div class="o_setting_box o_searchable_setting col-12 col-lg-6">
                        <div class="o_setting_right_pane">
                            <span class="o_form_label">Salary Advance Calculation</span>
                            <span class="fa fa-lg fa-building-o" title="Values set here are company-specific." aria-label="Values set here are company-specific." groups="base.group_multi_company" role="img"/>
                            <div class="text-muted">
                                How salary advance is computed in payslips
                            </div>
                             <div class="content-group">
                                <field name="company_salary_advance_calculation" class="o_light_label mt16" widget="radio"/>
                            </div>
                            <field name="company_salary_advance_percents" widget="percentage" attrs="{'required': [('company_salary_advance_calculation', '=', 'percentage')], 'invisible': [('company_salary_advance_calculation', '!=', 'percentage')]}"/>
                        </div>
                    </div>
                    <div class="o_setting_box o_searchable_setting col-12 col-lg-6">
                        <div class="o_setting_right_pane">
                            <span class="o_form_label">Salary Indexation</span>
                            <span class="fa fa-lg fa-building-o" title="Values set here are company-specific." aria-label="Values set here are company-specific." groups="base.group_multi_company" role="img"/>
                            <div class="text-muted">
                                Periods for which salary indexation is applied
                            </div>
                             <div class="content-group">
                                 <button type="action" name="%(salary_indexation_period_action)d" string="Indexation Periods" class="btn-link" icon="fa-arrow-right"/>
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>

</odoo>
