<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="salary_indexation_period_view_tree" model="ir.ui.view">
        <field name="name">salary.indexation_period.view.tree</field>
        <field name="model">salary.indexation_period</field>
        <field name="arch" type="xml">
            <tree editable="top">
                <field name="date_from"/>
                <field name="date_to"/>
                <field name="company_id" groups="base.group_multi_company"/>
            </tree>
        </field>
    </record>


    <record id="salary_indexation_period_action" model="ir.actions.act_window">
        <field name="name">Salary Indexation Periods</field>
        <field name="res_model">salary.indexation_period</field>
        <field name="view_mode">tree</field>
    </record>

</odoo>
