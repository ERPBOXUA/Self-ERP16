<?xml version="1.0" encoding="UTF-8"?>
<odoo>


    <record id="hr_payslip_create_payment_view_form" model="ir.ui.view">
        <field name="name">hr.payslip.create_payment.view.form</field>
        <field name="model">hr.payslip.create_payment</field>
        <field name="arch" type="xml">
            <form create="0" duplicate="0" delete="0">
                <sheet>
                    <field name="id" invisible="1"/>
                    <field name="line_count" invisible="1"/>

                    <div attrs="{'invisible': [('line_count', '!=', 1)]}">
                        <group>
                            <field name="line_first_payslip_id"/>
                            <field name="line_first_partner_id"/>
                            <field name="line_first_amount"/>
                            <field name="line_first_currency_id" invisible="1"/>
                        </group>
                        <group>
                            <group>
                                <field name="line_first_date" attrs="{'required': [('line_count', '=', 1)]}"/>
                                <field name="line_first_journal_id" attrs="{'required': [('line_count', '=', 1)]}" options="{'no_create': True, 'no_edit': True}"/>
                                <field name="line_first_bank_statement_id" options="{'no_create': True, 'no_edit': True}"/>
                            </group>
                        </group>
                    </div>

                    <div attrs="{'invisible': [('line_count', '&lt;=', 1)]}">
                        <group>
                            <group>
                                <field name="default_date"/>
                                <field name="default_journal_id"
                                       options="{'no_create': True, 'no_edit': True}"/>
                                <field name="default_bank_statement_id"
                                       attrs="{'invisible': [('default_journal_id', '=', False)]}"
                                       options="{'no_create': True, 'no_edit': True}"/>
                            </group>
                        </group>

                        <separator string="Bank Statement Lines"/>
                        <field name="line_ids">
                            <tree editable="bottom" create="0" duplicate="0" delete="0">
                                <field name="date"/>
                                <field name="payslip_id"/>
                                <field name="payslip_partner_id"/>
                                <field name="amount"/>
                                <field name="journal_id" required="1" options="{'no_create': True, 'no_edit': True}"/>
                                <field name="bank_statement_id" attrs="{'invisible': [('journal_id', '=', False)]}" options="{'no_create': True, 'no_edit': True}"/>
                                <field name="currency_id" invisible="1"/>
                            </tree>
                            <form create="0" duplicate="0" delete="0">
                                <group>
                                    <field name="date"/>
                                    <field name="payslip_id"/>
                                    <field name="payslip_partner_id"/>
                                    <field name="amount"/>
                                    <field name="journal_id" required="1" options="{'no_create': True, 'no_edit': True}"/>
                                    <field name="bank_statement_id" attrs="{'invisible': [('journal_id', '=', False)]}" options="{'no_create': True, 'no_edit': True}"/>
                                    <field name="currency_id" invisible="1"/>
                                </group>
                            </form>
                        </field>
                    </div>
                </sheet>
                <footer>
                    <button name="action_confirm" type="object" string="Create" class="btn-primary"/>
                    <button special="cancel" string="Cancel" class="btn-secondary"/>
                </footer>
            </form>
        </field>
    </record>


</odoo>
