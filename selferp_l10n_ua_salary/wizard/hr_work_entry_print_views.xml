<?xml version="1.0" encoding="UTF-8"?>
<odoo>


    <record id="hr_work_entry_print_view_form" model="ir.ui.view">
        <field name="name">hr.work.entry.print.view.form</field>
        <field name="model">hr.work.entry.print</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <label for="date_from" string="Date"/>
                            <div class="o_row">
                                <field name="date_from" widget="daterange" options="{'related_end_date': 'date_to'}"/>
                                <i class="fa fa-long-arrow-right mx-1" aria-label="Arrow icon" title="Arrow"/>
                                <field name="date_to" widget="daterange" options="{'related_start_date': 'date_from'}"/>
                            </div>
                            <field name="mode" widget="radio"/>
                            <field name="department_id" attrs="{'invisible': [('mode', '=', 'random')], 'required': [('mode', '!=', 'random')]}"/>
                        </group>
                    </group>
                    <div class="alert alert-warning" role="alert">
                        <p>Archived employees, employees without created work records or employees without contracts for the given period will be ignored!</p>
                    </div>
                    <separator string="Employees"/>
                    <field name="employee_ids" attrs="{'readonly': [('mode', '!=', 'random')]}" force_save="1">
                        <tree editable="top" edit="0">
                            <field name="name"/>
                            <field name="department_id"/>
                            <field name="job_id"/>
                            <field name="parent_id"/>
                            <field name="company_id" invisible="1"/>
                        </tree>
                    </field>
                </sheet>
                <footer>
                    <button name="action_print_timesheet" type="object" string="Print Timesheet" class="btn-primary"/>
                    <button special="cancel" string="Cancel" class="btn-secondary"/>
                </footer>
            </form>
        </field>
    </record>


    <record id="hr_work_entry_print_action" model="ir.actions.act_window">
        <field name="name">Print Timesheet</field>
        <field name="res_model">hr.work.entry.print</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="hr_work_entry_print_view_form" />
        <field name="target">new</field>
    </record>


</odoo>
