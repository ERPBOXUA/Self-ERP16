<?xml version="1.0" encoding="utf-8"?>
<odoo>


    <record id="view_account_search" model="ir.ui.view">
        <field name="name">account.account.search.inherit.selferp_l10n_ua_vat</field>
        <field name="model">account.account</field>
        <field name="inherit_id" ref="account.view_account_search"/>
        <field name="priority" eval="100" />
        <field name="arch" type="xml">
            <filter name="used" position="before">
                <filter name="filter_first_event" string="The first event" domain="[('first_event', '=', True)]" />
                <separator/>
            </filter>
        </field>
    </record>


    <record id="view_account_form" model="ir.ui.view">
        <field name="name">account.account.form.inherit.selferp_l10n_ua_vat</field>
        <field name="model">account.account</field>
        <field name="inherit_id" ref="account.view_account_form"/>
        <field name="priority" eval="100" />
        <field name="arch" type="xml">
            <field name="account_type" position="after">
                <field name="first_event"
                       attrs="{'invisible': [('account_type', 'not in', ('liability_payable', 'asset_receivable'))]}"/>
            </field>
        </field>
    </record>


</odoo>
