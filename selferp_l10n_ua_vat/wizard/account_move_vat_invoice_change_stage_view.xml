<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="account_move_vat_invoice_change_stage_view_form" model="ir.ui.view">
        <field name="name">account.move.vat_invoice.change_stage.view.form</field>
        <field name="model">account.move.vat_invoice.change_stage</field>
        <field name="arch" type="xml">
            <form string="Change Stage VAT Invoice" create="0" duplicate="0" delete="0">
                <group>
                    <field name="vat_invoice_stage"/>
                </group>
                <footer>
                    <button name="action_confirm"
                            type="object"
                            string="Change Stage"
                            class="btn-primary"/>
                    <button string="Cancel"
                            class="btn-secondary"
                            special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="account_move_vat_invoice_change_stage_action" model="ir.actions.act_window">
        <field name="name">Change Stage</field>
        <field name="res_model">account.move.vat_invoice.change_stage</field>
        <field name="binding_model_id" ref="selferp_l10n_ua_vat.model_account_move"/>
        <field name="binding_view_types">list</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

</odoo>
