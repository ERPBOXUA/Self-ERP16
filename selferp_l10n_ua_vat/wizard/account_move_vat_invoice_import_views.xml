<?xml version="1.0" encoding="UTF-8"?>
<odoo>


    <record id="account_move_vat_invoice_import_view_form" model="ir.ui.view">
        <field name="name">account.move.vat_invoice.import.view.form</field>
        <field name="model">account.move.vat_invoice.import</field>
        <field name="arch" type="xml">
            <form create="0" duplicate="0" delete="0">
                <sheet>
                    <field name="id" invisible="1" />
                    <field name="attachment_count" invisible="1" />

                    <field name="attachment_ids"
                           widget="many2many_binary"
                           options="{'accepted_file_extensions': '.xml,.zip'}"
                           required="1"/>
                </sheet>
                <footer>
                    <button name="action_confirm"
                            type="object"
                            attrs="{'invisible': [('attachment_count', '=', 0)]}"
                            string="Import"
                            class="btn-primary" />
                    <button special="cancel" string="Cancel" class="btn-secondary" />
                </footer>
            </form>
        </field>
    </record>


</odoo>
