<?xml version="1.0" encoding="UTF-8"?>
<odoo>


    <record id="view_move_form" model="ir.ui.view">
        <field name="name">account.move.view.form.inherit.selferp_l10n_ua_vat_export</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="priority" eval="200"/>
        <field name="arch" type="xml">
            <header position="inside">
                <button name="action_create_customs_declaration_vat_invoice"
                        type="object"
                        string="Create VAT Invoice"
                        attrs="{'invisible': ['|', '|', '|', ('is_customs_declaration', '=', False), ('move_type', '!=', 'out_invoice'), ('state', '!=', 'posted'), ('customs_declaration_vat_invoice_id', '!=', False)]}"/>
            </header>

            <div name="button_box" position="inside">
                <field name="customs_declaration_vat_invoice_id" invisible="1"/>
                <field name="customs_declaration_customer_invoice_id" invisible="1"/>

                <button name="action_show_customs_declaration_vat_invoice"
                        type="object"
                        class="oe_stat_button"
                        icon="fa-pencil-square-o"
                        attrs="{'invisible': ['|', ('move_type', '!=', 'out_invoice'), ('customs_declaration_vat_invoice_id', '=', False)]}"
                        string="VAT Invoice"/>
                <button name="action_show_customs_declaration_customer_invoice"
                        type="object"
                        class="oe_stat_button"
                        icon="fa-pencil-square-o"
                        attrs="{'invisible': ['|', ('move_type', '!=', 'vat_invoice'), ('customs_declaration_customer_invoice_id', '=', False)]}"
                        string="Invoice"/>
            </div>
        </field>
    </record>


</odoo>
