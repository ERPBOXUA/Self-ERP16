<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="name">res.config.settings.form.inherit.selferp_l10n_ua_vat_pos</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="point_of_sale.res_config_settings_view_form"/>
        <field name="priority" eval="100"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@id='pos_accounting_section']" position="inside">
                <div id="pos_vat_settings" class="col-12 col-lg-6 o_setting_box">
                    <div class="o_setting_right_pane">
                        <div>
                            <label string="Default VAT Partner" for="pos_vat_partner_id"/>
                            <div class="text-muted">
                                Set the default Partner for which the consolidated VAT invoice will be generated in accordance with the legislative norms of Ukraine
                            </div>
                            <div class="content-group mt16">
                                <field name="pos_vat_partner_id" colspan="4" nolabel="1"/>
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>

</odoo>
