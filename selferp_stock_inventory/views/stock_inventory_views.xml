<?xml version="1.0" encoding="UTF-8"?>
<odoo>


    <record id="stock_inventory_view_form" model="ir.ui.view">
        <field name="name">stock.inventory.form</field>
        <field name="model">stock.inventory</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="action_confirm"
                            type="object"
                            states="draft"
                            string="Confirm"
                            class="oe_highlight"/>
                    <field name="state" widget="statusbar"/>
                </header>
                <sheet>
                    <div name="button_box" class="oe_button_box">
                        <button name="action_show_stock_move_lines"
                                type="object"
                                icon="fa-list-ul"
                                class="oe_stat_button">
                            <field name="stock_move_line_count" widget="statinfo" string="Stock Moves"/>
                        </button>
                    </div>
                    <div class="oe_title">
                        <h1><field name="name" nolabel="1"/></h1>
                    </div>
                    <group>
                        <group>
                            <field name="company_id"/>
                            <field name="inventory_date"/>
                            <field name="location_ids" widget="many2many_tags"/>
                            <field name="user_id"/>
                        </group>
                    </group>
                    <notebook>
                        <page id="stock_inventory_lines_tab"
                              name="stock_inventory_lines_tab"
                              string="Stock Inventory Lines">
                            <field name="inventory_line_ids">
                                <tree editable="bottom" create="0" delete="0">
                                    <field name="stock_quant_id" optional="hide"/>
                                    <field name="product_id"/>
                                    <field name="product_uom_id"/>
                                    <field name="avg_cost"
                                           attrs="{'column_invisible': [('parent.state', '=', 'draft')]}"
                                           string="Unit Cost"/>
                                    <field name="location_id"/>
                                    <field name="owner_id" optional="hide"/>
                                    <field name="accounting_date" optional="hide"/>
                                    <field name="quantity"/>
                                    <field name="inventory_quantity"/>
                                    <field name="inventory_diff_quantity"/>
                                </tree>
                            </field>
                        </page>
                        <page id="stock_inventory_members_tab"
                              name="stock_inventory_members_tab"
                              string="Stock Inventory Members">
                            <field name="inventory_member_ids">
                                <tree editable="bottom">
                                    <field name="employee_id"/>
                                    <field name="job_id"/>
                                    <field name="role"/>
                                </tree>
                            </field>
                        </page>
                        <page id="note_tab"
                              name="note_tab"
                              string="Note">
                            <field name="note"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>


    <record id="stock_inventory_view_tree" model="ir.ui.view">
        <field name="name">stock.inventory.tree</field>
        <field name="model">stock.inventory</field>
        <field name="arch" type="xml">
            <tree create="false" decoration-info="state == 'draft'" decoration-muted="state == 'done'">
                <field name="name"/>
                <field name="company_id" groups="base.group_multi_company"/>
                <field name="inventory_date"/>
                <field name="user_id"/>
                <field name="note"/>
                <field name="state"/>
            </tree>
        </field>
    </record>


    <record id="stock_inventory_action" model="ir.actions.act_window">
        <field name="name">Stock Inventory</field>
        <field name="res_model">stock.inventory</field>
        <field name="view_mode">tree,form</field>
    </record>


    <menuitem id="menu_action_stock_inventory_tree"
              name="Stock Inventory"
              parent="stock.menu_stock_warehouse_mgmt"
              sequence="11"
              action="stock_inventory_action"/>


</odoo>
